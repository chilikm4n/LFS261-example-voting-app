pipeline {
  agent any
20Nov24: conditional were previously; no functional changes were made
  tools{
    nodejs 'NodeJS 22.4.0'
  }

  stages{
    stage(build){
      when{
        changeset "**/result**"
      }
      steps{
        echo 'Compiling result app..'
        dir('worker'){
          sh 'npm install'
        }
      }
    }
    stage(test){
      when{
        changeset "**/result/**"
      }
      steps{
        echo 'Running Unit Tests on results app..'
        dir('result'){
          sh 'npm install'
          sh 'npm test'
        }
      }
    }
  }
  
}
